{
  "manifest_version": 3,
  "name": "Kiskadi",
  "description": "A Extensão Kiskadi, auxilia na rotina diária da operação do caixa de um PDV",
  "version": "1.3.3",
  "permissions": ["scripting", "activeTab"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "Kiskadi" },
  "content_scripts": [
    {
      "matches": ["https://api.kiskadi.com/*","https://app.tiny.com.br/*","https://erp.tiny.com.br/*"],
      "js": ["jquery.min.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["login.html", "modal.html"],
    "matches": ["https://api.kiskadi.com/*","https://app.tiny.com.br/*","https://erp.tiny.com.br/*"]
  }]
}
